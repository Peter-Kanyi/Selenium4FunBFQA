from selenium import webdriver
from selenium.webdriver.common.keys import Keys

# Initialize the WebDriver (Chrome in this example)
driver = webdriver.Chrome(executable_path='path/to/chromedriver')

# Open the e-commerce website (replace with the URL of your choice)
driver.get("https://www.example-ecommerce-website.com")

# Find the search bar element and enter your search query
search_bar = driver.find_element_by_name("search")  # Replace with the actual name, ID, or selector of the search bar element
search_query = "your search query here"
search_bar.send_keys(search_query)

# Submit the search by pressing Enter
search_bar.send_keys(Keys.RETURN)  # You can also use Keys.ENTER

# The website will now display search results based on your query

# Continue with interactions on the search results page (e.g., clicking on products, adding to cart, etc.)

# Close the browser when you're done
driver.quit()
